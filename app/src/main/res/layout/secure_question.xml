<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <TextView
        android:id="@+id/info_pass_states"
        android:layout_width="300dp"
        android:layout_height="100dp"
        app:layout_constraintEnd_toEndOf="@id/back_all_secure"
        app:layout_constraintStart_toStartOf="@id/back_all_secure"
        android:gravity="center"
        android:fontFamily="monospace"
        android:textColor="@color/n_white"
        android:textSize="19dp"
        app:layout_constraintBottom_toTopOf="@id/back_all_secure"
        android:layout_marginBottom="10dp"
        android:text="Specify your current Master Key"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/question_all"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/back_all_secure"
        android:backgroundTint="@color/b_black"
        android:background="@drawable/corner_25"
        android:layout_marginBottom="10dp"
        >


        <TextView
            android:id="@+id/question"
            android:layout_width="200dp"
            android:layout_height="120dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="What is the name of the place where you had your first vacation?"
            android:fontFamily="monospace"
            android:textSize="16dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_marginStart="10dp"
            />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/edit_q"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/edit_red"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/question"
            android:layout_marginStart="20dp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/back_all_secure"
        android:layout_width="300dp"
        android:layout_height="90dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/corner_25"
        android:backgroundTint="@color/b_black">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/back_secure_info"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:boxStrokeColor="@color/style_edit_text"
            android:textColorHint="@color/design_default_color_surface"
            app:hintTextColor="@color/n_white"
            app:cursorColor="@color/n_white"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            app:passwordToggleEnabled="true"
            >

            <EditText
                android:id="@+id/input_secure_info"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:textColorLink="@color/b_black"
                android:inputType="textPassword"
                android:hint="Answer"
                android:gravity="center"
                android:maxLines="3"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/progress"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/back_secure_info"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/back_secure_info"
            app:layout_constraintStart_toStartOf="@id/back_secure_info"
            app:trackColor="@color/b_black"
            app:indicatorColor="@color/b_black"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/auth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/fingerprint"
        app:layout_constraintTop_toBottomOf="@id/back_all_secure"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="30dp"
        />


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/back_all_secure"
        app:layout_constraintStart_toEndOf="@id/auth"
        app:layout_constraintTop_toTopOf="@id/auth"
        app:layout_constraintBottom_toBottomOf="@id/auth"
        android:src="@drawable/close"
        />
</androidx.constraintlayout.widget.ConstraintLayout>