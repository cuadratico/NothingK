<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/matrix"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/all"
        android:layout_marginBottom="20dp"
        android:maxWidth="300dp"
        android:text="Export your information"
        />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/info_export"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/info"
        app:layout_constraintBottom_toTopOf="@id/information"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="10dp"
        />



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/all"
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:backgroundTint="@color/b_black"
        android:background="@drawable/corner_25"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="30dp"
            android:backgroundTint="@color/n_red"
            >

            <TextView
                android:id="@+id/info_pass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:text="Specify the password"
                android:textSize="17dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />

            <EditText
                android:id="@+id/input_pass"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/info_pass"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:hint="password"
                android:inputType="textPassword"
                android:textSize="19dp"
                android:gravity="center"
                android:textColor="@color/n_white"
                android:fontFamily="monospace"
                android:maxLines="1"
                />

            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:id="@+id/progress"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                app:indicatorColor="@color/b_black"
                app:trackColor="@color/b_black"
                app:layout_constraintEnd_toEndOf="@id/input_pass"
                app:layout_constraintStart_toStartOf="@id/input_pass"
                app:layout_constraintTop_toBottomOf="@id/input_pass"

                />

            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/my_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/progress"
                android:text="Use my password"
                android:fontFamily="monospace"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:layout_width="280dp"
            android:layout_height="2dp"
            android:background="@drawable/corner_25"
            android:backgroundTint="@color/n_red"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/pass"
            app:layout_constraintBottom_toTopOf="@id/archive_name"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/archive_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/pass"
            android:layout_marginTop="30dp"
            android:backgroundTint="@color/n_red"
            >

            <TextView
                android:id="@+id/info_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:text="Specify the name"
                android:textSize="17dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />

            <EditText
                android:id="@+id/input_name"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/info_name"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:hint="Name"
                android:textSize="19dp"
                android:gravity="center"
                android:textColor="@color/n_white"
                android:fontFamily="monospace"
                android:maxLines="1"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="19dp"
                app:layout_constraintBottom_toBottomOf="@id/input_name"
                app:layout_constraintStart_toEndOf="@id/input_name"
                android:text=".nk"
                android:fontFamily="monospace"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:layout_width="280dp"
            android:layout_height="2dp"
            android:background="@drawable/corner_25"
            android:backgroundTint="@color/n_red"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/archive_name"
            app:layout_constraintBottom_toTopOf="@id/directory"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/directory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/archive_name"
            android:layout_marginTop="30dp"
            android:backgroundTint="@color/n_red"
            >

            <TextView
                android:id="@+id/info_directory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:text="Specify the directory"
                android:textSize="17dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/directory_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/info_directory"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:spinnerMode="dialog"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/password_visibility"
        android:layout_width="40dp"
        android:layout_height="35dp"
        android:background="@drawable/corner_25"
        android:backgroundTint="@color/b_black"
        app:layout_constraintStart_toEndOf="@id/all"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="@id/all"
        android:layout_marginTop="68dp"
        >

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/visibility_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/close_eye"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"

            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/export_buttom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/corner_25"
        android:backgroundTint="@color/n_red"
        app:layout_constraintTop_toBottomOf="@id/all"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:textSize="18dp"
        android:textColor="@color/n_white"
        android:fontFamily="monospace"
        android:text="Export"
        android:textAllCaps="false"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/create_new_a"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/corner_25"
        android:backgroundTint="@color/n_red"
        app:layout_constraintTop_toBottomOf="@id/export_buttom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:textSize="18dp"
        android:textColor="@color/n_white"
        android:fontFamily="monospace"
        android:text="Create a new file"
        android:textAllCaps="false"
        />
</androidx.constraintlayout.widget.ConstraintLayout>