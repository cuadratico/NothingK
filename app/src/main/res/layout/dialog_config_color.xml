<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/back_color_expressed"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:background="@drawable/corner_25"
        android:backgroundTint="#264653"
        app:layout_constraintTop_toTopOf="@id/back"
        app:layout_constraintBottom_toBottomOf="@id/back"
        app:layout_constraintEnd_toEndOf="@id/back"
        app:layout_constraintStart_toStartOf="@id/back"
        >

        <TextView
            android:id="@+id/color_code_output"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:textColor="@color/n_white"
            android:textSize="17dp"
            android:text="#264653"
            android:fontFamily="monospace"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_width="200dp"
        android:layout_height="5dp"
        app:layout_constraintEnd_toEndOf="@id/back_color_expressed"
        app:layout_constraintStart_toStartOf="@id/back_color_expressed"
        app:layout_constraintTop_toBottomOf="@id/back_color_expressed"
        app:layout_constraintBottom_toBottomOf="@id/back"
        android:background="@drawable/corner_25"
        android:backgroundTint="@color/n_white"
        />

    <View
        android:id="@+id/back"
        android:layout_width="290dp"
        android:layout_height="110dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>