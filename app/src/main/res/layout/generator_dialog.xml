<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/copy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/corner_25"
        android:backgroundTint="@color/n_red"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="20dp"
        android:textSize="18dp"
        android:textColor="@color/n_white"
        android:fontFamily="monospace"
        android:text="Copy"
        android:textAllCaps="false"
        />

    <com.google.android.material.materialswitch.MaterialSwitch
        android:id="@+id/simbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/copy"
        app:layout_constraintEnd_toStartOf="@id/copy"
        android:layout_marginBottom="30dp"
        android:layout_marginEnd="10dp"
        app:thumbTint="@color/n_red"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/simbol"
        app:layout_constraintBottom_toBottomOf="@id/simbol"
        app:layout_constraintStart_toEndOf="@id/simbol"
        android:layout_marginStart="20dp"
        android:textSize="25dp"
        android:fontFamily="monospace"
        android:text="$%@..."
        />

    <com.google.android.material.materialswitch.MaterialSwitch
        android:id="@+id/numbers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/simbol"
        app:layout_constraintEnd_toStartOf="@id/copy"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        app:thumbTint="@color/n_red"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/numbers"
        app:layout_constraintBottom_toBottomOf="@id/numbers"
        app:layout_constraintStart_toEndOf="@id/numbers"
        android:layout_marginStart="20dp"
        android:textSize="25dp"
        android:fontFamily="monospace"
        android:text="123..."
        />

    <com.google.android.material.materialswitch.MaterialSwitch
        android:id="@+id/capital_l"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/numbers"
        app:layout_constraintEnd_toStartOf="@id/copy"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        app:thumbTint="@color/n_red"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/capital_l"
        app:layout_constraintBottom_toBottomOf="@id/capital_l"
        app:layout_constraintStart_toEndOf="@id/capital_l"
        android:layout_marginStart="20dp"
        android:textSize="25dp"
        android:fontFamily="monospace"
        android:text="ABC..."
        />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/all"
        android:layout_width="320dp"
        android:layout_height="120dp"
        android:background="@drawable/corner_25"
        android:backgroundTint="@color/n_white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/capital_l"
        android:layout_marginBottom="30dp"
        >

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/circle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            />
        <TextView
            android:id="@+id/result_pass"
            android:layout_width="0dp"
            android:layout_height="60dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:textSize="15dp"
            android:textColor="@color/b_black"
            android:gravity="center"
            android:fontFamily="monospace"
            android:maxLines="2"
            />

        <SeekBar
            android:id="@+id/size"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/result_pass"
            android:max="20"
            android:min="4"
            />

        <TextView
            android:id="@+id/information_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            app:layout_constraintTop_toTopOf="@id/size"
            app:layout_constraintBottom_toBottomOf="@id/size"
            app:layout_constraintEnd_toStartOf="@id/size"
            android:layout_marginEnd="10dp"
            android:text="4"
            android:textSize="17dp"
            android:textColor="@color/b_black"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>



    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/progress"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/all"
        android:layout_marginTop="10dp"
        app:trackColor="@color/b_black"
        />
    <TextView
        android:id="@+id/info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/all"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:text="Generate a password"
        android:textSize="20dp"
        android:fontFamily="@font/matrix"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/refresh"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/corner_25"
        android:backgroundTint="@color/b_black"
        app:layout_constraintTop_toBottomOf="@id/info"
        app:layout_constraintBottom_toTopOf="@id/all"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/info"
        >

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/icon_refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/reset"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/gen_emails_intent"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@id/info"
        app:layout_constraintBottom_toTopOf="@id/all"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/info"
        android:backgroundTint="@color/b_black"
        android:background="@drawable/corner_25"
        >

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/mail_generator"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>